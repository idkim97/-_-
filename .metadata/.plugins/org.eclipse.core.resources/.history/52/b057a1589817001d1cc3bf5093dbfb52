package calculate_Ver_Abstract;

import lombok.Data;

@Data
public class Calculator extends CalAbstract{
	
	private int a;
	private int b;
	private String op;
	private double sum=0;
	private double result;

	// 더하기 연산 수행후 결과 return
	@Override
	public void add() {
		this.sum += this.a;
		result = this.sum;
	}

	// 빼기 연산 수행 후 결과 return
	@Override
	public void sub() {
		this.sum -= this.a;
		result = this.sum;
	}

	// 곱하기 연산 수행 후 결과 return
	@Override
	public void mul() {
		this.sum *= this.a;
		super.result = this.sum;
	}

	// 나누기 연산 수행 후 결과 return
	@Override
	public void div() {
		this.sum /= this.a;
		super.result = this.sum;
	}
	
	// 연산 경로 저장
	public void Calpath(String path) {
		super.StringBuffer = super.StringBuffer.concat(path);
	}
	
	public void calculate() {
		if (op.equals("+")) {
			add();
		} else if (op.equals("-")) {
			sub();
		} else if (op.equals("*")) {
			mul();
		} else if (op.equals("/")) {
			div();
		}
	}


	// 연산기호가 무엇인지 판단하는 객체
	@Override
	public char judgeOp(String op) {
		if (op.equals("+")) {
			return op.charAt(0);
		} else if (op.equals("-")) {
			return op.charAt(0);
		} else if (op.equals("*")) {
			return op.charAt(0);
		} else if (op.equals("/")) {
			return op.charAt(0);
		}
		return 'X';
	}

	// 입력받은게 숫자인지 기호인지 판단하는 객체
	public boolean judgeCal(boolean temp) {
		if (temp == true)
			return true;
		else
			return false;
	}

}
